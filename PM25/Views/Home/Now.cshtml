@model PM25.Controllers.HomeController.NowModel
@{
    ViewBag.Title = "前沿研究";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/Now.css")
         <div class="con-L">
                <h1>
                     <span class="title">百科知识</span>
                     <span class="more">@Html.ActionLink("MORE", "More", "Home")</span>
                </h1>
                <ul>
                    @foreach (var n in Model.Pedias)
                    {
                        ViewBag.i++;
                        if (ViewBag.i > 12)
                        {
                            break;
                        }
                    <li><nobr><a href="~/More/Show/@n.ID">@MvcHtmlString.Create(n.title)</a>
                        </nobr></li>
                }
                </ul>
            </div>
           <div class="con-R">
               <ul class="text">
                   
                       @foreach (var n in Model.Nows)
                       {
                        
                        <li>
                           <h4> @MvcHtmlString.Create(n.title)</h4>
                                <a href="~/Home/Down/?name=@MvcHtmlString.Create(n.downloadURL)">下载全文</a>                           
                            <div class="summary">
                            @MvcHtmlString.Create(n.summary)
                            </div>
                        </li>                                             
                   }
                   </ul>
               
               </div>
                   
                
