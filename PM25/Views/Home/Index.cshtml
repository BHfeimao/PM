@model PM25.Controllers.HomeController.IndexModel   
@{
    ViewBag.Title = "首页";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Index.css")       
            <div class="con-L">
                <h1>
                    <span class="title">百科知识</span>       
                    <span class="more">@Html.ActionLink("MORE", "More_info", "Home")</span>
                </h1>
                <ul>
                    @foreach (var n in Model.Pedias)
                    {
                        <li><a href="/More/Show/@n.ID">@MvcHtmlString.Create(n.title)</a></li>
                    }
                </ul>       
            </div>
            <div class="con-R">
                <p>
                    @foreach (var n in Model.Homes)
                {
                    @MvcHtmlString.Create(n.preface)
                }
                </p>
            </div>
 
  
               
               
